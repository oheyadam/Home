<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/breedsFragment">

  <fragment
    android:id="@+id/breedsFragment"
    android:name="com.oheyadam.feature.list.BreedsFragment"
    android:label="@string/label_fragment_search"
    tools:layout="@layout/fragment_breeds">
    <action
      android:id="@+id/action_breedsFragment_to_breedFragment"
      app:destination="@id/breedFragment"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />
  </fragment>

  <fragment
    android:id="@+id/breedFragment"
    android:name="com.oheyadam.feature.detail.BreedFragment"
    android:label="BreedFragment">
    <argument
      android:name="breedId"
      app:argType="integer" />
  </fragment>

</navigation>
